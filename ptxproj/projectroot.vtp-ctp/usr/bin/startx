#-----------------------------------------------------------------------------#
#-----------------------------------------------------------------------------#
# Script:   /usr/bin/startx
#
# Brief:    starting up Xorg and icewm
#
# Author:   elrest Automationssysteme GmbH
#
#-----------------------------------------------------------------------------#

. /etc/profile > /dev/null 2>&1

export HOME=/root
export DISPLAY=:0
unset DBUS_SESSION_BUS_ADDRESS
unset SESSION_MANAGER

PIDXORG=$(pidof Xorg)
# start X
if [ -z "$PIDXORG"]; then
  echo "STARTING Xorg"
  # look for usb mouse pugged in
  grep -w "EV=17" /proc/bus/input/devices
  if [ "$?" == "0" ]; then
  /usr/bin/X &
  else
  /usr/bin/X -nocursor &
  fi
  PIDXORG=$(pidof Xorg)
  while [ -z "$PIDXORG" ]; do
    usleep 250000
    PIDXORG=$(pidof Xorg)
  done
  sleep 1
fi

# start icewm windowmanager
PIDICEWM=$(pidof icewm)
if [ -z "$PIDICEWM" ]; then
  /usr/bin/icewm -c /etc/specific/icewm.conf &
fi

# wait for icewm
PIDICEWM=$(pidof icewm)
while [ -z "$PIDICEWM" ]; do
  usleep 250000
  PIDICEWM=$(pidof icewm)
done

# start services 
/etc/script/start_application.sh &
